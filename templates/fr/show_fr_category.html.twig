{% extends 'base.html.twig' %}

{% block title %}Découvrir Paris !{% endblock %}

{% block body %}


<div class="container">
    <button type="button" class="btn btn-dark"><a href="{{ path('fr') }}">Retour</a></button>
    {% if is_granted('ROLE_ADMIN') %}
        <button type="button" class="btn btn-dark"><a href="{{ path('admin') }}">Back Office</a></button>
    {% endif %}  
    
    <div class="row-12 titreVilleFr p-0 ml-10%">

        <div class="col-md-12 display-4 text-center my-4  text-start">
            <!-- titre de la page récupère le nom de la ville selectionnée -->
            <h1> Découvrir {{ ville.title }} </h1>
        </div>
    </div>



    <div class="text-center my-4">
        {% for data in category %}
            <button type="button" class="btn btn-primary text-center my-4"><a href=""> {{ data.title }} </a></button>
        {% endfor %}

    </div>


        <!-- Article Section-->
        <section class="page-section article bg-primary text-white" id="article">
            <div class="container">
                <!-- article Section Heading-->
                <h2 class="page-section-heading text-center text-uppercase mb-0">Les "Type Catégories" à "Nom de la ville"</h2>
                <!-- Icon Divider-->
                <div class="divider-custom divider-light">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon"><img class="clip-art" src="assets/img/clip-art-vortex.png"></div>
                    <div class="divider-custom-line"></div>
                </div>
                <!-- article Grid Items-->
                <div class="row justify-content-center">
                    <!-- article Item 1-->
                    <div class="col-md-6 col-lg-4 mb-5">
                        <div class="article-item mx-auto" data-toggle="modal" data-target="#articleModal1">
                            <div class="article-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                <div class="article-item-caption-content text-center text-white"><i class="fas fa-search-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="" alt="" />
                        </div>
                    </div>
                </div>
            </div>


        <!-- article Modals-->
        <div class="article-modal modal fade" id="articleModal1" tabindex="-1" role="dialog" aria-labelledby="articleModal1Label" aria-hidden="true">
            <div class="modal-dialog modal-xl" role="document">
                <div class="modal-content">
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"><i class="fas fa-times"></i></span>
                    </button>
                    <div class="modal-body text-center">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-8">
                                    <!-- article Modal - Title-->
                                    <h2 class="article-modal-title text-secondary text-uppercase mb-0" id="articleModal1Label">Titre Article</h2>
                                    <!-- Icon Divider-->
                                    <div class="divider-custom">
                                        <div class="divider-custom-line"></div>
                                        <div class="divider-custom-icon"><img class="clip-art" src="assets/img/clip-art-vortex.png"></div>
                                        <div class="divider-custom-line"></div>
                                    </div>
                                    <!-- article Modal - Image-->
                                    <img class="img-fluid rounded mb-5" src="" alt="" />
                                    <!-- article Modal - Text-->
                                    <p class="mb-5">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Mollitia neque assumenda ipsam nihil, molestias magnam, recusandae quos quis inventore quisquam velit asperiores, vitae? Reprehenderit soluta, eos quod consequuntur itaque. Nam.</p>
                                    <button class="btn btn-primary" data-dismiss="modal">
                                        <i class="fas fa-times fa-fw"></i>
                                        FERMER
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


</div>
{% endblock %}