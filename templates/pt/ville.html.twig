{% extends 'base.html.twig' %}

{% block title %}Découvrir 

    {% for data in ville %}
        {% if data.id == id %}
            {{ data.title }}
        {% endif %}
    {% endfor %}! 

{% endblock %}

{% block body %}


<div class="container">

    <div class="text-light">
        
    </div>

    <div class="row-12 p-0 m-2">

        <div class="col-md-12 display-4 text-center my-4 text-start">

            <!-- Ville choisie -->
            <h1> Découvrir
                {% for data in ville %}
                            {% if data.id == id %}
                                {{ data.title }}
                            {% endif %}
                {% endfor %} </h1>
                
            </div>
        </div>
        
    <button type="button" class="btn btn-dark"><a href="{{ path('pt') }}" style="text-decoration: none; color: white;">Retour au Portugal</a></button>

    <div class="text-center">
        {% for data in cat %}
            <button class="btn btn-dark"><a href="#" id="a"> {{ data.title }} </a></button>
        {% endfor %}

    </div>
        
        
        
