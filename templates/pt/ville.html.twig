        </div>

        <div id="Restaurant">
            Restaurant
        </div>
    
    </div> -->
    
    <div class="row show">

        {% for data in lieu %}
            {% if data.ville.id == id %}

                
                <div class="col-md-4">

                    <div class="card mt-5">
                        <h5 class="text-center">{{ data.category.title }}</h5>
                        <img class="card-img-top" src="/image/{{ data.image }}" alt="Card image cap" style="height: 250px;">
                        <div class="card-body">
                            <h5 class="card-title">{{ data.title}} </h5>
                            <p class="card-text">{{ data.adresse }}</p>

                            <a href="{{ path('lieupt', {'id': data.id }) }}" class="btn btn-primary">Voir plus</a>
                            
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>


</div>
{% endblock %}