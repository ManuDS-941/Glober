{% extends "base.html.twig" %}

{% block body %}
    
    <div class="container"> 

        
        <h1 class="text-center mb-4 mt-4" >Back Office | Ajout d'un Pays<a class="text-right btn btn-dark ml-4" href=" {{ path('admin_pays') }} ">Retour</a> </h1>         
    
        {{ form_start(formPays, {'attr': {'class': 'col-md-5 mx-auto'}}) }}

        <div class="form-group">
            {{ form_row(formPays.title, {'label': "Nouveau Pays :", 'attr': {'class': 'form-control'}} ) }}
        </div>
        <button type="submit" class="btn btn-dark mt-4">
            
        {% if Bouton %}
        
        Modifier le Pays
        
        {% else %}
        
        Ajouter un Pays
        
        {% endif %}    
        
        </button>

        {{ form_end(formPays) }}

    </div>

{% endblock %}