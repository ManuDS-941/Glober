{% extends "base.html.twig" %}

{% block body %}
    
    <div class="container"> 

        
        <h1 class="text-center mb-4 mt-4" >Back Office | Ajout d'un Lieu<a class="text-right btn btn-dark ml-4" href=" {{ path('admin_lieu') }} ">Retour</a> </h1>         
    
        {{ form_start(formLieu, {'attr': {'class': 'col-md-5 mx-auto m-4'}}) }}

        
        <div class="form-group">
            {{ form_row(formLieu.title, {'label': "Titre :", 'attr': {'class': 'form-control'}} ) }}
        </div>

        <div class="form-group">
            {{ form_row(formLieu.image, {'label': "Selectionner une Image :", 'attr': {'class': 'form-control'} }) }}
            {# {{ form_widget(formLieu.image, {'attr': {'class': 'form-control'} }) }} #}
            {# {{ form_widget(formLieu.image, {'type': 'file' }) }} #}
        </div>

        <div class="form-group">
            {{ form_row(formLieu.adresse, {'label': "Adresse :", 'attr': {'class': 'form-control'}} ) }}
        </div>

        <div class="form-group">
            {{ form_row(formLieu.category, {'label': "Selectionner une Cat√©gorie :", 'attr': {'class': 'form-control'}} ) }}
        </div>

        <div class="form-group">
            {{ form_row(formLieu.ville, {'label': "Selectionner une Ville :", 'attr': {'class': 'form-control'}} ) }}
        </div>

        <button type="submit" class="btn btn-dark mt-4">
            
        {% if Bouton %}
        
        Modifier le Lieu
        
        {% else %}
        
        Ajouter un Lieu
        
        {% endif %}    
        
        </button>

        {{ form_end(formLieu) }}  

    </div>

{% endblock %}