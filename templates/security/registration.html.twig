{% extends "base.html.twig" %}

{% block title %}Mon Blog Symfony | Inscrivez-vous {% endblock %}

{% block body %}

    <h1 class="display-4 text-center my-4">Cr√©er votre Compte</h1> 

    
    {{ form_start(formInscription, {'attr': { 'class': 'col-md-4 mx-auto'}} ) }}

        <div class="form-group">
            {{ form_row(formInscription.email, {'label': "E-Mail", 'attr': {'class': 'form-control'}} ) }}
        </div>

        <div class="form-group">
            {{ form_row(formInscription.username, {'label': "Nom d'utilisateur", 'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(formInscription.password, {'label': "Mot de Passe", 'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(formInscription.confirm_password, {'label': "Confirmer votre mot de passe", 'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="text-center">
            <button type="submit" class="col-12 btn btn-dark mt-4 mb-4">Inscription</button>
        </div>

    {{ form_end(formInscription) }}

{% endblock %}