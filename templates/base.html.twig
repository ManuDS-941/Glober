<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bienvenue au Projet du Passage du Titre{% endblock %}</title>
        {% block stylesheets %}
            {# CDN Bootstrap #}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">


            
            {# CDN FONTAWESOME #}
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
            
            {# Lien vers fichier CSS #} {# asset(): fonction TWIG qui permet de générer une URL jusqu'au fichier style.css #}
            <link rel="stylesheet" href="{{ asset('css/styleind.css')}}">
            <link rel="stylesheet" href="{{ asset('css/stylefr.css')}}">
            <link rel="stylesheet" href="{{ asset('css/stylept.css')}}">
            <link rel="stylesheet" href="{{ asset('css/styleaccueil.css')}}">


        {% endblock %}
    </head>
<body onload="initialize()">
    
        {# NAV BAR COMMUNE POUR CHAQUE PAGE #}
        <nav>

            <input type="checkbox" id="nav" class="hidden">
                <label for="nav" class="nav-btn">
                        <i></i>
                        <i></i>
                        <i></i>
                </label>
                <div class="logo">
                        <a href="{{path('accueil')}}">Globe</a>
                </div>
                <div class="nav-wrapper">
                        <ul>
                            <li><a href="{{path('fr')}}">France</a></li>
                            <li><a href="{{path('es')}}">Espagne</a></li>
                            <li><a href="{{path('pt')}}">Portugal</a></li>
                            <li><a href="{{path('ind')}}">Inde</a></li>
                            <li><a href="#">Roradmap</a></li>
                            {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path('admin') }}">Gestions Admin</a></li>
                            {% endif %}
                            {% if app.user %}
                            <li><a href="{{ path('security_logout') }}">Deconnexion</a></li>
                            {% else %}
                            <li><a href="{{path('security_login')}}">Se connecter</a></li>
                            {% endif %}
                        </ul>
                </div>
        </nav>

        <div class="loader">
            <div class="earth">
                <img src="../image/earth.png">
            </div>
        
            <div class="plane">
                <h1>&#9992</h1>
            </div>
        
            <p class="loading">Loading...</p>
        </div>

        {% block body %}
        
        
        
        {% endblock %}


        {# FOOTER COMMUN POUR CHAQUE PAGE #}
        {# <footer>

            <div class="icon-box">
                <button class="btn youtube"><i class="fab fa-youtube icon"></i></button>
                <button class="btn facebook"><i class="fab fa-facebook-f icon"></i></button>
                <button class="btn instagram"><i class="fab fa-instagram icon"></i></button>
                <button class="btn twitter"><a><i class="fab fa-twitter"></i></a></button>
            </div>

        </footer> #}

        


        {% block javascripts %}

        {# CDN JS Boostrap #}
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
        
        {# Lien vers Fichier JS #} {# asset(): fonction TWIG qui permet de générer une URL jusqu'au fichier script.js #}
        <script src="../js/script.js"></script>

        <script src="http://www.webglearth.com/v2/api.js"></script>
        
        

        {% endblock %}
    </body>
</html>
